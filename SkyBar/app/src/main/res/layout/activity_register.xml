<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.milos.skybar.RegisterActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to login page"
        android:id="@+id/btnGoToLoginPage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="159dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtInput"
        android:layout_alignBottom="@+id/btnGoToLoginPage"
        android:layout_alignLeft="@+id/btnGoToLoginPage"
        android:layout_alignStart="@+id/btnGoToLoginPage"
        android:layout_marginBottom="76dp"
        android:autoText="false"
        android:text="Input"
        android:layout_alignRight="@+id/btnGoToLoginPage"
        android:layout_alignEnd="@+id/btnGoToLoginPage" />

</RelativeLayout>
